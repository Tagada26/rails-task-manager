<h1>More details on your task</h1>
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<%= link_to("Add a new task", new_path) %>
<p></p>
<%= link_to("Edit your task", edit_path) %>
<p></p>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<p></p>
<%= link_to("Go back to list", tasks_path) %>
